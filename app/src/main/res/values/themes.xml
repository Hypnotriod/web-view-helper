<resources>
    <!-- Base application theme. -->
    <style name="Theme.MainApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_variant</item>
        <item name="colorOnPrimary">@color/on_primary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_variant</item>
        <item name="colorOnSecondary">@color/on_secondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.AlertDialog" parent="android:Theme.Material.Light.Dialog.NoActionBar">
        <item name="android:colorBackground">@color/app_background_color</item>
        <item name="android:textColorPrimary">@color/on_primary</item>
        <item name="colorAccent">@color/on_primary</item>
    </style>

    <style name="Theme.MainApp.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MainApp.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>